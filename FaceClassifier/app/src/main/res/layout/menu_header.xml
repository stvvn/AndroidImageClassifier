<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/snowWhite"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textSize="24sp"
        android:layout_above="@id/user_username"
        android:textColor="@color/smokyBlack"
        android:fontFamily="@font/brandon_grotesque_black"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hair_salon"
        android:layout_above="@id/user_name"/>

    <ImageView
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/header_user_profile" />

</RelativeLayout>